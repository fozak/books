{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                 // ðŸ‘ˆ necessary for ESM
    "lib": ["ES2020"],
    "moduleResolution": "node",         // ðŸ‘ˆ required for ESM resolution
    "outDir": "../dist/api",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
