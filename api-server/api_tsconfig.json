{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "../dist/api",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "../api-server/**/*",
    "../backend/**/*",
    "../schemas/**/*",
    "../models/**/*",
    "../src/**/*",
    "../utils/**/*",
    "../fyo/**/*",
    "../reports/**/*",
    "../main/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
